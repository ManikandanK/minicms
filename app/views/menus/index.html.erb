<h1>Listing menus</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parent</th>
    <th>Site</th>
    <th>Entity type</th>
    <th>Entity</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%= menu.name %></td>
    <td><%= menu.parent_id %></td>
    <td><%= menu.site_id %></td>
    <td><%= menu.entity_type %></td>
    <td><%= menu.entity_id %></td>
    <td><%= menu.description %></td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

