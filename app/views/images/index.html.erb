<h1>Listing images</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Entity type</th>
    <th>Entity</th>
    <th>Upload file name</th>
    <th>Upload content type</th>
    <th>Upload file size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.name %></td>
    <td><%= image.entity_type %></td>
    <td><%= image.entity_id %></td>
    <td><%= image.upload_file_name %></td>
    <td><%= image.upload_content_type %></td>
    <td><%= image.upload_file_size %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

